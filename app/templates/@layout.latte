<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Card games</title>
	<script type="text/javascript" src="/node_modules/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/node_modules/nette.ajax.js/nette.ajax.js"></script>
	<script type="text/javascript" src="/node_modules/nette-forms/src/assets/netteForms.min.js"></script>

	<link rel="stylesheet" type="text/css" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/css/generic-chat.css">

	{ifset head}
		{include head}
	{/ifset}
</head>

<body>
	<div n:snippet="flashes">
		<div n:foreach="$flashes as $flash" n:class="alert, 'alert-'.$flash->type">{$flash->message}</div>
	</div>

	<div n:snippet="content" style="padding-top: 40px;">
		{include content}
	</div>

	<script type="text/javascript">
		$(function () {
			$.nette.init();
		});
	</script>
	<script type="text/javascript" src="/node_modules/websockets-wamp/public/js/autobahn.js"></script>
	<script type="text/javascript" src="/node_modules/websockets-wamp/public/js/ipub.websockets.wamp.js"></script>
	{ifset scripts}
		{include scripts}
	{/ifset}
</body>
</html>
